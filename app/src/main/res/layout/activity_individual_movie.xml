<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".IndividualMovieActivity">

    <FrameLayout
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".2">
        <TextView
            android:id="@+id/movie_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/title_size" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".8">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/movie_details_movie_poster_image"
            android:layout_marginTop="@dimen/movie_details_image_margin_left"
            android:layout_marginLeft="@dimen/movie_details_image_margin_left"
            android:layout_width="@dimen/movie_details_image_width"
            android:layout_height="@dimen/movie_details_image_height" />
        <TextView
            android:gravity="center_horizontal"
            android:id="@+id/movie_details_release_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"/>

        <RatingBar
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/movie_details_image_margin_left"
            style="?android:attr/ratingBarStyleSmall"
            android:id="@+id/movie_details_rating_bar"
            android:stepSize=".5"
            android:numStars="10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_margin="@dimen/movie_details_image_margin_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:id="@+id/movie_details_synopsis"/>

        </LinearLayout>

    </FrameLayout>




</LinearLayout>